package view

import "gtmx/src/server/routes"

templ NewMenu() {
	<div class="text-center">
		Create New Menu
	</div>
	<form action={ templ.URL(routes.GetPath(routes.CREATE_MENU)) } method="POST">
		<div>
			<input type="text" name="name" placeholder="Name" class="input input-bordered w-full max-w-xs"/>
			<input type="date" name="start" placeholder="" class="input input-bordered w-full max-w-xs"/>
			<input type="date" name="end" placeholder="" class="input input-bordered w-full max-w-xs"/>
		</div>
		<button class="btn input-bordered">Create</button>
	</form>
}
